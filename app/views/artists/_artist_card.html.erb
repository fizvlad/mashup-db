<div class="card <%= classes %>">
  <div class="card-header">
    <%= link_to artist.name, artist %>
  </div>
  <div class="card-body p-3">
    <div class="card-text">
      <p>Created <%= pluralize(artist.mashups.count, 'mashup') %></p>
      <p>Mentioned in <%= pluralize(artist.posts.count, 'post') %></p>
    </div>
  </div>
  <div class="card-footer">
    <% if artist.posts.any? %>
      <small class="text-muted">Creating since <%= artist.posts.order(date: :asc).first.date.to_s(:custom_timeless) %></small>
    <% end %>
  </div>
</div>
