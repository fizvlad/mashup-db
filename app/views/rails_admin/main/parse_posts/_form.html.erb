<%= form_with scope: :parse_posts, url: parse_posts_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :offset, 'Offset:' %>
    <%= f.number_field :offset, value: 0, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :until_id, 'Until post with ID:' %>
    <%= f.number_field :until_id, value: @maximum_post_id || 1, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :max_requests, 'Maximum amount of requests:' %>
    <%= f.number_field :max_requests, value: 20, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :count, 'Posts per request:' %>
    <%= f.number_field :count, value: 100, class: 'form-control' %>
  </div>
  <%= f.submit 'Parse', class: 'btn btn-primary' %>
<% end %>
