<div class="card <%= classes %>">
  <div class="card-header">Statistics</div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <%= pluralize(mashup.first_post.likes, 'like') %>
    </li>
    <li class="list-group-item">
      <%= pluralize(mashup.first_post.reposts, 'repost') %>
    </li>
    <li class="list-group-item">
      <%= pluralize(mashup.first_post.comments, 'comment') %>
    </li>
    <li class="list-group-item">
      <%= pluralize(mashup.first_post.views, 'view') %>
    </li>
  </ul>
</div>
